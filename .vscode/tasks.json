{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:agent",
      "type": "shell",
      "command": "pnpm --filter @quikday/agent build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "dev:api",
      "type": "shell",
      "command": "pnpm dev:api",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [{ "regexp": "." }],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Debugger listening on"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "dev:web",
      "type": "shell",
      "command": "pnpm dev:web",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\s*ERROR",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*ready|vite",
          "endsPattern": "Local:.*localhost:8000|Network:"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    }
  ]
}
