{
  "extends": "@quikday/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "metadata.ts",
    "add.ts",
    "callback.ts",
    "tool.ts",
    "lib/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
