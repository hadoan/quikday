{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2021",
    "module": "es2020",
    "moduleResolution": "bundler",
    "declaration": false,
    "declarationMap": false
  },
  "include": ["**/*.ts"]
}
