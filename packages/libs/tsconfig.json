{
  "extends": "@quikday/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "composite": false,
    "declaration": true,
    "skipLibCheck": true,
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "experimentalDecorators": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
